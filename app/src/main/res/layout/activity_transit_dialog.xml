<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        android:paddingTop="@dimen/pt5"
        android:paddingLeft="@dimen/pt5"
        android:paddingBottom="@dimen/pt5"
        android:lineSpacingExtra="@dimen/pt4"
        android:text="为您推荐如下车次到达服务网点"
        android:textColor="#353535"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/transitList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f0f0f0"
        android:divider="#666666"
        android:dividerHeight="1px"
        android:padding="10dp"></ListView>

</LinearLayout>