<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="@dimen/pt200"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorOrange1"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">
        <!--card_view:cardElevation="8dp"-->
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img1" />
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn1"
        style="@style/style_btn_blue1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt36"
        android:layout_margin="@dimen/pt8"
        android:text="推送测试接口" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorTextGray1"
        android:text="hello world"
        android:textSize="18dp" />

</LinearLayout>