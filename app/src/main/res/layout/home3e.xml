<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/lxl_bg"
    android:orientation="vertical"
    tools:context=".Activity.H1.NewsFragment">

    <fragment
        android:id="@+id/frag"
        android:name="com.lecheng.hello.fzgjj.Activity.Unit.ActionBar"
        class="com.lecheng.hello.fzgjj.Activity.Unit.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt48"
        tools:layout="@layout/unit_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et1"
                android:layout_width="@dimen/pt1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pt4"
                android:layout_weight="1"
                android:background="@drawable/style_et_shape"
                android:hint="楼盘名称"
                android:textColorHint="@color/colorGray" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="@dimen/pt1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginTop="@dimen/pt4"
                android:layout_weight="1"
                android:background="@drawable/style_et_shape"
                android:hint="批文编号"
                android:textColorHint="@color/colorGray" />
        </LinearLayout>

        <EditText
            android:id="@+id/et3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pt4"
            android:background="@drawable/style_et_shape"
            android:hint="开发商名称"
            android:textColorHint="@color/colorGray" />

        <ListView
            android:id="@+id/lv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn1"
            style="@style/style_btn_blue1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pt36"
            android:text="搜索" />
    </LinearLayout>
</LinearLayout>

